{% set years = [2021, 2020, 2019, 2018, 2017, 2016, 2015, 2014, 2013, 2012, 2011, 2010, 2009, 2007] %}
<div>
  <h2>projects</h2>
  {% for year in years %}
    <ul>
      <span class="separator">{{ year }}</span>
      {% for content in collections.projects %}
        {% if content.data.pubdate == year %}
          {% include "components/home-project-title.njk" %}
        {% endif %}
      {% endfor %}
    </ul>
  {% endfor %}
</div>
