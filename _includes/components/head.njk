<head>
  <meta charset="utf-8">
  <title>{{ title or metadata.title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
  <meta name="description" content="{{ summary }}">
  <meta name="copyright"   content="Ali Akbar Mehta">
  <meta name="language"    content="EN">

  <meta property="og:type"             content="website" />
  <meta property="og:site_name"        content="{{ metadata.title }}"/>
  <meta property="og:url"              content="{{ metadata.url }}"/>
  <meta property="og:title"            content="{{ title or renderData.title or metadata.title }}" />
  <meta property="og:description"      content="{{ summary }}" />
  {% if hero %}
    <meta property="og:image"          content="{{ metadata.url }}{{ hero | og }}" />
    <meta property="og:image:type"     content="image/jpeg" />
    <meta property="og:image:width"    content="1600" />
  {% endif %}

  <meta name="twitter:card"            content="summary_large_image" />
  <meta name="twitter:site"            content="@AliAkbarMehta" />
  <meta name="twitter:title"           content="{{ title or renderData.title or metadata.title }}" />
  <meta name="twitter:description"     content="{{ summary }}" />
  {% if hero %}
    <meta name="twitter:image:alt"     content="{{ title or renderData.title or metadata.title }}" />
    <meta name="twitter:image"         content="{{ metadata.url }}{{ hero | og }}" />
  {% endif %}

  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">

  <link rel="dns-prefetch" href="https://identity.netlify.com">
  <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="/static/js/scrollspy.min.js"></script>
  <script src="/static/js/responsive-video.js"></script>
  {# <script src="/static/js/jBox.min.js"></script>
  <script src="/static/js/jBox.Image.min.js"></script> #}
  <script src="/static/js/slick.min.js"></script>
  <script src="/static/js/scripts.js"></script>

  <link rel="stylesheet" href="/static/css/styles.css">
</head>
